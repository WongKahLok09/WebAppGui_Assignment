<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>ManagerConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>Manager</web-resource-name>
            <description>ManagerConstraint</description>
            <url-pattern>/manager/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Manager(web)</web-resource-name>
            <description/>
            <url-pattern>/manager/staffAdd.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>manager</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>file</realm-name>
    </login-config>
    <security-role>
        <description>staff CRUD</description>
        <role-name>manager</role-name>
    </security-role>
    <servlet>
        <servlet-name>AddStaffDetails</servlet-name>
        <servlet-class>staffServlets.AddStaffDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductsServlet</servlet-name>
        <servlet-class>productsServlet.ProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewProducts</servlet-name>
        <servlet-class>productsServlet.AddNewProducts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProduct</servlet-name>
        <servlet-class>productsServlet.UpdateProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProduct</servlet-name>
        <servlet-class>productsServlet.DeleteProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddStaffDetails</servlet-name>
        <url-pattern>/AddStaffDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductsServlet</servlet-name>
        <url-pattern>/ProductsServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustomerRegister</servlet-name>
        <servlet-class>Servlets.CustomerRegister</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerRegister</servlet-name>
        <url-pattern>/CustomerRegister</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustomerConfirmation</servlet-name>
        <servlet-class>Servlets.CustomerConfirmation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerConfirmation</servlet-name>
        <url-pattern>/CustomerConfirmation</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustomerLogin</servlet-name>
        <servlet-class>Servlets.CustomerLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerLogin</servlet-name>
        <url-pattern>/CustomerLogin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustForgotPassword</servlet-name>
        <servlet-class>Servlets.CustForgotPassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustForgotPassword</servlet-name>
        <url-pattern>/CustForgotPassword</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustResetPassword</servlet-name>
        <servlet-class>Servlets.CustResetPassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustResetPassword</servlet-name>
        <url-pattern>/CustResetPassword</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustomerLogout</servlet-name>
        <servlet-class>Servlets.CustomerLogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerLogout</servlet-name>
        <url-pattern>/CustomerLogout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewProducts</servlet-name>
        <url-pattern>/AddNewProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProduct</servlet-name>
        <url-pattern>/UpdateProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProduct</servlet-name>
        <url-pattern>/DeleteProduct</url-pattern>
    </servlet-mapping>
</web-app>
